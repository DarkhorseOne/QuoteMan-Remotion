AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# AI provider selection: openai | anthropic | gemini
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MODELS=
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (proxy base from user request: http://127.0.0.1:8972/v1/messages)
# NOTE: SDK expects the server root; we will auto-normalize if you paste the full /v1/messages URL.
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_BASE_URL=http://127.0.0.1:8972/v1/messages

# Gemini (proxy base from user request: http://127.0.0.1:8972/v1beta/models)
# NOTE: SDK expects the server root; we will auto-normalize if you paste the full /v1beta/models URL.
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_API_VERSION=v1beta
GEMINI_BASE_URL=http://127.0.0.1:8972/v1beta/models
